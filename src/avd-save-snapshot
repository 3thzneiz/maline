set cport [lindex $argv 0]
set name [lindex $argv 1]
spawn telnet localhost $cport
expect "OK"
send "avd stop\r"
expect "OK"
send "avd snapshot save $name\r"
expect "OK"
send "avd start\r"
expect "OK"
