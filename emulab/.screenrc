autodetach on
startup_message off
defscrollback 10000
caption always "%{rw}%n%f %t %{wk} | %?%-Lw%?%{wb}[%n*%f %t]%?(%u)%?%{wk}%?%+Lw%? %{wk}"
hardstatus alwayslastline "%{+b kr}host: %{kw}%H %{kg} | %c | %{ky}%d.%m.%Y. | %{kr}(load: %l)%-0=%{kw}"
deflog on
logfile screen-logs/%Y-%m-%d-%0c-%s.%n.log
log on
